generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change this if using another DB like MySQL
  url      = env("DATABASE_URL") // Ensure DATABASE_URL is defined in your .env file
}

model LeadCollection {
  id         Int      @id @default(autoincrement()) // Primary key
  name       String
  email      String   @unique
  phone      String?  @unique
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  lastAction String?

  ActivityLogs ActivityLog[] @relation("LeadActivityLog")
  FollowUps    FollowUp[]    @relation("LeadFollowUp")
}

model ActivityLog {
  id            Int      @id @default(autoincrement()) // Primary key
  leadId        Int // Foreign key referencing LeadCollection
  initialStatus String
  updatedStatus String
  action        String?
  reason        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Lead LeadCollection @relation("LeadActivityLog", fields: [leadId], references: [id])
}

model FollowUp {
  id             Int      @id @default(autoincrement()) // Primary key
  leadId         Int // Foreign key referencing LeadCollection
  nextFollowUpAt DateTime
  status         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  Lead LeadCollection @relation("LeadFollowUp", fields: [leadId], references: [id])
}
